# Frontend Environment Variables

# API Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_SOCKET_URL=http://localhost:3001

# App Configuration
REACT_APP_NAME=WhatsApp Chat
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_VOICE_CALLS=true
REACT_APP_ENABLE_VIDEO_CALLS=true
REACT_APP_ENABLE_FILE_SHARING=true

# Media Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/*,video/*,audio/*,.pdf,.doc,.docx,.txt

# Notification Configuration
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_NOTIFICATION_SOUND=true

